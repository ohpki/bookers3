<table class='table'>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Body</th>
  </tr>
    <% books.each do |book| %>
    <tr id="book_<%= book.id %>">
      <td>
        <%= link_to (book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %></td>
        <% end %>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td class=<%="favorite-btn" + book.id.to_s %>><%= render 'favorites/favorite', book: book %></td>
      <td class="comments-count">コメント数:<%= book.book_comments.count %></td>
    </tr>

    <% end %>
  </table>
