<% book_comments.each do |book_comment| %>
                <td><%= image_tag book_comment.user.get_profile_image, size:'50x50'%></td>
                <td><%= book_comment.user.name %></td>
                <td><%= book_comment.comment %></td>
                <% if book_comment.user == current_user %>
                  <td class="book_comment_<%= book_comment.id %>"><%= link_to "消去", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %></td>
                <% end %>
              <% end %>